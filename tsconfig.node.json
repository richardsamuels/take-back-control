{
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "noEmit": true,
    "noUncheckedSideEffectImports": true,
    "paths": {
      "@/lib/*": ["./src/lib/*"],
      "@/store": ["./src/store.svelte"]
    }
  },
  "include": ["*.config.ts"]
}
